      "label": "Phone number",
      "info": "Displayed in contact information"
    },
    {
      "type": "textarea",
      "id": "contact_address",
      "label": "Address",
      "info": "Displayed in contact information"
    },
    {
      "type": "text",
      "id": "contact_hours",
      "label": "Business hours",
      "info": "Displayed in contact information"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
