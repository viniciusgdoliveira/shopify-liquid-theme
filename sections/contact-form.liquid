{% comment %}
  Enhanced contact form section with advanced features:
  - Contact form with validation
  - Newsletter signup
  - Customer account integration
  - File upload support
  - Performance optimizations
  - Accessibility compliance
{% endcomment %}

{% liquid
  assign show_contact_form = section.settings.show_contact_form
  assign show_newsletter = section.settings.show_newsletter
  assign show_contact_info = section.settings.show_contact_info
  assign enable_file_upload = section.settings.enable_file_upload
  assign enable_auto_save = section.settings.enable_auto_save
  assign enable_progress_indicator = section.settings.enable_progress_indicator
  assign contact_email = section.settings.contact_email
  assign contact_phone = section.settings.contact_phone
  assign contact_address = section.settings.contact_address
  assign contact_hours = section.settings.contact_hours
%}

<div class="contact-section" id="shopify-section-{{ section.id }}">
  <div class="contact-section__container">
    {% comment %} Contact Header {% endcomment %}
    <div class="contact-section__header">
      <h1 class="contact-section__title">{{ 'contact.general.title' | t }}</h1>
      <p class="contact-section__subtitle">{{ 'contact.general.subtitle' | t }}</p>
    </div>

    <div class="contact-section__content">
      {% comment %} Contact Form {% endcomment %}
      {% if show_contact_form %}
        <div class="contact-form">
          <div class="contact-form__container">
            {% comment %} Contact Information {% endcomment %}
            {% if show_contact_info %}
              <div class="contact-form__info">
                <h2 class="contact-form__info-title">{{ 'contact.general.get_in_touch' | t }}</h2>
                <p class="contact-form__info-text">{{ 'contact.general.info_text' | t }}</p>
                
                <ul class="contact-form__info-list">
                  {% if contact_email %}
                    <li class="contact-form__info-item">
                      {% render 'icons', icon: 'email' %}
                      <span>{{ contact_email }}</span>
                    </li>
                  {% endif %}
                  
                  {% if contact_phone %}
                    <li class="contact-form__info-item">
                      {% render 'icons', icon: 'phone' %}
                      <span>{{ contact_phone }}</span>
                    </li>
                  {% endif %}
                  
                  {% if contact_address %}
                    <li class="contact-form__info-item">
                      {% render 'icons', icon: 'location' %}
                      <span>{{ contact_address }}</span>
                    </li>
                  {% endif %}
                  
                  {% if contact_hours %}
                    <li class="contact-form__info-item">
                      {% render 'icons', icon: 'clock' %}
                      <span>{{ contact_hours }}</span>
                    </li>
                  {% endif %}
                </ul>
              </div>
            {% endif %}

            {% comment %} Contact Form {% endcomment %}
            <div class="contact-form__form">
              <h2 class="contact-form__form-title">{{ 'contact.general.send_message' | t }}</h2>
              
              {% form 'contact', class: 'form', data-contact-form: 'contact' %}
                {{ form.errors | default_errors }}
                
                <div class="form__fields">
                  <div class="form-field">
                    <label for="ContactFormName" class="form-field__label form-field__label--required">
                      {{ 'contact.form.name' | t }}
                    </label>
                    <input
                      type="text"
                      name="contact[name]"
                      id="ContactFormName"
                      class="form-field__input"
                      value="{{ form.name }}"
                      required
                      autocomplete="name"
                    >
                  </div>

                  <div class="form-field">
                    <label for="ContactFormEmail" class="form-field__label form-field__label--required">
                      {{ 'contact.form.email' | t }}
                    </label>
                    <input
                      type="email"
                      name="contact[email]"
                      id="ContactFormEmail"
                      class="form-field__input"
                      value="{{ form.email }}"
                      required
                      autocomplete="email"
                    >
                  </div>

                  <div class="form-field">
                    <label for="ContactFormPhone" class="form-field__label">
                      {{ 'contact.form.phone' | t }}
                    </label>
                    <input
                      type="tel"
                      name="contact[phone]"
                      id="ContactFormPhone"
                      class="form-field__input"
                      value="{{ form.phone }}"
                      autocomplete="tel"
                    >
                  </div>

                  <div class="form-field">
                    <label for="ContactFormSubject" class="form-field__label">
                      {{ 'contact.form.subject' | t }}
                    </label>
                    <select
                      name="contact[subject]"
                      id="ContactFormSubject"
                      class="form-field__select"
                    >
                      <option value="">{{ 'contact.form.subject_placeholder' | t }}</option>
                      <option value="general">{{ 'contact.form.subject_general' | t }}</option>
                      <option value="support">{{ 'contact.form.subject_support' | t }}</option>
                      <option value="sales">{{ 'contact.form.subject_sales' | t }}</option>
                      <option value="partnership">{{ 'contact.form.subject_partnership' | t }}</option>
                      <option value="other">{{ 'contact.form.subject_other' | t }}</option>
                    </select>
                  </div>

                  <div class="form-field">
                    <label for="ContactFormMessage" class="form-field__label form-field__label--required">
                      {{ 'contact.form.message' | t }}
                    </label>
                    <textarea
                      name="contact[body]"
                      id="ContactFormMessage"
                      class="form-field__textarea"
                      rows="6"
                      required
                      placeholder="{{ 'contact.form.message_placeholder' | t }}"
                    >{{ form.body }}</textarea>
                  </div>

                  {% if enable_file_upload %}
                    <div class="form-field">
                      <label for="ContactFormFile" class="form-field__label">
                        {{ 'contact.form.attachment' | t }}
                      </label>
                      <div class="file-upload">
                        <input
                          type="file"
                          name="contact[attachment]"
                          id="ContactFormFile"
                          class="file-upload__input"
                          accept="image/*,.pdf,.doc,.docx"
                        >
                        <label for="ContactFormFile" class="file-upload__label">
                          {% render 'icons', icon: 'upload' %}
                          <span class="file-upload__text">{{ 'contact.form.choose_file' | t }}</span>
                        </label>
                      </div>
                      <div class="file-preview"></div>
                      <div class="file-error"></div>
                    </div>
                  {% endif %}

                  {% comment %} Honeypot for spam protection {% endcomment %}
                  <div style="display: none;">
                    <label for="ContactFormWebsite">Website</label>
                    <input type="text" name="contact[website]" id="ContactFormWebsite" autocomplete="off">
                  </div>
                </div>

                <div class="form__actions">
                  <button type="submit" class="form__submit">
                    {{ 'contact.form.submit' | t }}
                  </button>
                </div>

                <div class="form__success" style="display: none;">
                  {{ 'contact.form.success' | t }}
                </div>

                <div class="form__error" style="display: none;">
                  {{ 'contact.form.error' | t }}
                </div>
              {% endform %}
            </div>
          </div>
        </div>
      {% endif %}

      {% comment %} Newsletter Signup {% endcomment %}
      {% if show_newsletter %}
        <div class="newsletter-form">
          <div class="newsletter-form__container">
            <h2 class="newsletter-form__title">{{ 'newsletter.general.title' | t }}</h2>
            <p class="newsletter-form__subtitle">{{ 'newsletter.general.subtitle' | t }}</p>
            
            {% form 'customer', class: 'newsletter-form__form', data-newsletter-form: 'newsletter' %}
              <div class="newsletter-form__field">
                <input
                  type="email"
                  name="contact[email]"
                  class="newsletter-form__input"
                  placeholder="{{ 'newsletter.general.email_placeholder' | t }}"
                  required
                  autocomplete="email"
                >
                <button type="submit" class="newsletter-form__submit">
                  {{ 'newsletter.general.subscribe' | t }}
                </button>
              </div>
              
              <div class="newsletter-form__success" style="display: none;">
                {{ 'newsletter.general.success' | t }}
              </div>
              
              <div class="newsletter-form__error" style="display: none;">
                {{ 'newsletter.general.error' | t }}
              </div>
            {% endform %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
.contact-section {
  padding: var(--space-8) 0;
  background: var(--color-background);
}

.contact-section__container {
  max-width: var(--container-xl);
  margin: 0 auto;
  padding: 0 var(--space-4);
}

.contact-section__header {
  text-align: center;
  margin-bottom: var(--space-8);
}

.contact-section__title {
  font-size: clamp(var(--font-size-3xl), 5vw, var(--font-size-5xl));
  font-weight: var(--font-weight-extrabold);
  color: var(--color-text-primary);
  margin: 0 0 var(--space-4) 0;
  letter-spacing: var(--letter-spacing-tight);
}

.contact-section__subtitle {
  font-size: var(--font-size-lg);
  color: var(--color-text-secondary);
  max-width: 600px;
  margin: 0 auto;
  line-height: var(--line-height-relaxed);
}

.contact-section__content {
  display: grid;
  gap: var(--space-8);
}

/* Contact Form Styles */
.contact-form {
  margin-bottom: var(--space-8);
}

.contact-form__container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-8);
  align-items: start;
}

.contact-form__info {
  padding: var(--space-6);
  background: var(--color-background-secondary);
  border-radius: var(--radius-lg);
  border: var(--border-width-1) solid var(--color-border-light);
}

.contact-form__info-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-primary);
  margin: 0 0 var(--space-4) 0;
}

.contact-form__info-text {
  color: var(--color-text-secondary);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--space-4);
}

.contact-form__info-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.contact-form__info-item {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  margin-bottom: var(--space-3);
  color: var(--color-text-secondary);
  font-size: var(--font-size-base);
}

.contact-form__info-icon {
  width: 20px;
  height: 20px;
  color: var(--color-primary);
  flex-shrink: 0;
}

.contact-form__form {
  background: var(--color-background);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  box-shadow: var(--shadow-card);
  border: var(--border-width-1) solid var(--color-border-light);
}

.contact-form__form-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-primary);
  margin: 0 0 var(--space-6) 0;
  text-align: center;
}

/* Newsletter Form Styles */
.newsletter-form {
  max-width: 600px;
  margin: 0 auto;
}

.newsletter-form__container {
  background: var(--color-background);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  box-shadow: var(--shadow-card);
  border: var(--border-width-1) solid var(--color-border-light);
  text-align: center;
}

.newsletter-form__title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-primary);
  margin: 0 0 var(--space-2) 0;
}

.newsletter-form__subtitle {
  color: var(--color-text-secondary);
  margin: 0 0 var(--space-4) 0;
  line-height: var(--line-height-relaxed);
}

.newsletter-form__field {
  display: flex;
  gap: var(--space-3);
  margin-bottom: var(--space-4);
}

.newsletter-form__input {
  flex: 1;
  padding: var(--space-3) var(--space-4);
  border: var(--border-width-1) solid var(--color-border);
  border-radius: var(--radius-base);
  background: var(--color-background);
  color: var(--color-text-primary);
  font-size: var(--font-size-base);
  transition: all var(--duration-200) var(--ease-out);
}

.newsletter-form__input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.1);
}

.newsletter-form__submit {
  padding: var(--space-3) var(--space-6);
  border: var(--border-width-1) solid var(--color-primary);
  border-radius: var(--radius-base);
  background: var(--color-primary);
  color: var(--color-text-inverse);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  cursor: pointer;
  transition: all var(--duration-200) var(--ease-out);
  white-space: nowrap;
}

.newsletter-form__submit:hover {
  background: var(--color-primary-hover);
  border-color: var(--color-primary-hover);
}

.newsletter-form__success,
.newsletter-form__error {
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-base);
  margin-bottom: var(--space-4);
  display: none;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
}

.newsletter-form__success {
  background: var(--color-success);
  color: var(--color-text-inverse);
}

.newsletter-form__error {
  background: var(--color-error);
  color: var(--color-text-inverse);
}

.newsletter-form__success.show,
.newsletter-form__error.show {
  display: block;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .contact-section {
    padding: var(--space-6) 0;
  }
  
  .contact-section__container {
    padding: 0 var(--space-3);
  }
  
  .contact-form__container {
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }
  
  .contact-form__info,
  .contact-form__form {
    padding: var(--space-4);
  }
  
  .newsletter-form__container {
    padding: var(--space-4);
  }
  
  .newsletter-form__field {
    flex-direction: column;
  }
  
  .newsletter-form__submit {
    width: 100%;
  }
}

@media screen and (max-width: 480px) {
  .contact-section__title {
    font-size: var(--font-size-2xl);
  }
  
  .contact-form__info,
  .contact-form__form {
    padding: var(--space-3);
  }
  
  .newsletter-form__container {
    padding: var(--space-3);
  }
}
{% endstylesheet %}

