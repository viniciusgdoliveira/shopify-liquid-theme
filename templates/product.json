{
  "sections": {
    "breadcrumbs": {
      "type": "multirow",
      "settings": {
        "heading": "Breadcrumbs",
        "layout": "breadcrumbs",
        "show_breadcrumbs": true
      }
    },
    "product_gallery": {
      "type": "product",
      "settings": {
        "enable_sticky_info": true,
        "enable_zoom": true,
        "enable_video_looping": false,
        "media_size": "large",
        "media_fit": "contain",
        "gallery_layout": "stacked",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "show",
        "hide_variants": false,
        "enable_video_looping": false,
        "enable_image_zoom": true,
        "enable_lightbox": true,
        "enable_swipe_gestures": true,
        "show_media_badges": true,
        "enable_fullscreen": true
      }
    },
    "product_info": {
      "type": "multirow",
      "settings": {
        "heading": "Product Information",
        "layout": "product_info",
        "show_vendor": true,
        "show_sku": true,
        "show_type": true,
        "show_tags": true,
        "show_share_buttons": true,
        "enable_pickup_availability": true,
        "show_payment_button": true,
        "show_quantity_selector": true,
        "show_variant_selector": true,
        "enable_wishlist": true,
        "show_product_rating": true,
        "show_stock_indicator": true,
        "enable_notify_me": true
      }
    },
    "product_description": {
      "type": "multirow",
      "settings": {
        "heading": "Description",
        "layout": "product_description",
        "enable_read_more": true,
        "truncate_words": 50,
        "show_collapsible": true,
        "enable_rich_text": true
      }
    },
    "product_tabs": {
      "type": "multirow",
      "settings": {
        "heading": "Product Details",
        "layout": "tabs",
        "tab_1_title": "Description",
        "tab_2_title": "Specifications",
        "tab_3_title": "Shipping & Returns",
        "tab_4_title": "Reviews",
        "tab_5_title": "Size Guide",
        "enable_accordion_mobile": true,
        "show_tab_icons": true
      }
    },
    "product_reviews": {
      "type": "multirow",
      "settings": {
        "heading": "Customer Reviews",
        "layout": "reviews",
        "enable_reviews": true,
        "show_review_count": true,
        "show_rating_summary": true,
        "enable_review_form": true,
        "reviews_per_page": 5
      }
    },
    "product_recommendations": {
      "type": "collection-product-icons",
      "settings": {
        "heading": "You might also like",
        "products_to_show": 4,
        "columns_desktop": 4,
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": true,
        "enable_quick_add": true,
        "columns_mobile": "2",
        "swipe_on_mobile": false,
        "padding_top": 36,
        "padding_bottom": 36,
        "color_scheme": "background-1",
        "enable_carousel": true,
        "show_product_badges": true
      }
    },
    "recently_viewed": {
      "type": "collection-product-icons",
      "settings": {
        "heading": "Recently viewed",
        "products_to_show": 4,
        "columns_desktop": 4,
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": true,
        "enable_quick_add": true,
        "columns_mobile": "2",
        "swipe_on_mobile": false,
        "padding_top": 36,
        "padding_bottom": 36,
        "color_scheme": "background-2",
        "enable_carousel": true
      }
    },
    "product_trust_badges": {
      "type": "multirow",
      "settings": {
        "heading": "Trust & Security",
        "layout": "trust_badges",
        "show_shipping_info": true,
        "show_return_policy": true,
        "show_secure_payment": true,
        "show_customer_support": true,
        "show_guarantee": true
      }
    },
    "sticky_add_to_cart": {
      "type": "sticky-add-to-cart",
      "settings": {
        "background_color": "#ffffff",
        "title_color": "#194052",
        "button_bg_color": "#5AC891",
        "button_hover_bg_color": "#3e8e41",
        "button_text_color": "#ffffff",
        "price_color": "#ffffff",
        "border_color": "rgba(0,0,0,0.05)",
        "enable_sticky": true,
        "show_price": true,
        "show_variant_selector": true,
        "show_quantity_selector": true,
        "mobile_position": "bottom",
        "enable_quick_view": true,
        "show_product_image": true
      }
    }
  },
  "order": [
    "breadcrumbs",
    "product_gallery",
    "product_info",
    "product_description",
    "product_tabs",
    "product_reviews",
    "product_recommendations",
    "recently_viewed",
    "product_trust_badges",
    "sticky_add_to_cart"
  ]
}
