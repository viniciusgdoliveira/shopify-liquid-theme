{
  "sections": {
    "cart_breadcrumbs": {
      "type": "multirow",
      "settings": {
        "heading": "Cart Breadcrumbs",
        "layout": "breadcrumbs",
        "show_breadcrumbs": true
      }
    },
    "cart_header": {
      "type": "multirow",
      "settings": {
        "heading": "Shopping Cart",
        "layout": "cart_header",
        "show_cart_title": true,
        "show_item_count": true,
        "enable_continue_shopping": true
      }
    },
    "main": {
      "type": "cart",
      "settings": {
        "enable_ajax_updates": true,
        "enable_quantity_selectors": true,
        "enable_remove_buttons": true,
        "show_product_images": true,
        "show_product_variants": true,
        "show_product_prices": true,
        "show_subtotal": true,
        "enable_save_for_later": true,
        "enable_wishlist": true,
        "show_cart_notes": true,
        "enable_gift_wrapping": true,
        "show_shipping_calculator": true,
        "enable_cart_recommendations": true,
        "show_trust_badges": true,
        "enable_quick_checkout": true
      }
    },
    "cart_recommendations": {
      "type": "collection-product-icons",
      "settings": {
        "heading": "You might also like",
        "products_to_show": 4,
        "columns_desktop": 4,
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": true,
        "enable_quick_add": true,
        "columns_mobile": "2",
        "swipe_on_mobile": false,
        "padding_top": 36,
        "padding_bottom": 36,
        "color_scheme": "background-1",
        "enable_carousel": true
      }
    },
    "cart_trust_badges": {
      "type": "multirow",
      "settings": {
        "heading": "Trust & Security",
        "layout": "trust_badges",
        "show_shipping_info": true,
        "show_return_policy": true,
        "show_secure_payment": true,
        "show_customer_support": true,
        "show_guarantee": true
      }
    }
  },
  "order": [
    "cart_breadcrumbs",
    "cart_header",
    "main",
    "cart_recommendations",
    "cart_trust_badges"
  ]
}
