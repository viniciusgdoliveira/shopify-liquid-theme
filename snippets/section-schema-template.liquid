{% comment %}
  Section Schema Template
  Provides a standardized schema structure for all theme sections
{% endcomment %}

{% liquid
  assign section_name = section_name | default: 'section'
  assign section_label = section_label | default: 'Section'
  assign section_category = section_category | default: 'General'
  assign section_icon = section_icon | default: 'section'
  assign section_max_blocks = section_max_blocks | default: 10
  assign section_min_blocks = section_min_blocks | default: 0
  assign section_default_blocks = section_default_blocks | default: ''
  assign section_settings = section_settings | default: ''
  assign section_blocks = section_blocks | default: ''
%}

{
  "name": "{{ section_name }}",
  "tag": "section",
  "class": "section-{{ section_name | handle }}",
  "settings": [
    {
      "type": "header",
      "content": "{{ section_label }} Settings"
    },
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "Add a unique ID to this section for custom styling"
    },
    {
      "type": "text",
      "id": "section_class",
      "label": "Additional CSS Classes",
      "info": "Add custom CSS classes to this section"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "container_width",
      "label": "Container Width",
      "options": [
        {
          "value": "full-width",
          "label": "Full Width"
        },
        {
          "value": "page-width",
          "label": "Page Width"
        },
        {
          "value": "narrow",
          "label": "Narrow"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "select",
      "id": "section_padding",
      "label": "Section Padding",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "section_margin",
      "label": "Section Margin",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "transparent"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "background_size",
      "label": "Background Size",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "auto",
          "label": "Auto"
        }
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "background_position",
      "label": "Background Position",
      "options": [
        {
          "value": "top left",
          "label": "Top Left"
        },
        {
          "value": "top center",
          "label": "Top Center"
        },
        {
          "value": "top right",
          "label": "Top Right"
        },
        {
          "value": "center left",
          "label": "Center Left"
        },
        {
          "value": "center center",
          "label": "Center Center"
        },
        {
          "value": "center right",
          "label": "Center Right"
        },
        {
          "value": "bottom left",
          "label": "Bottom Left"
        },
        {
          "value": "bottom center",
          "label": "Bottom Center"
        },
        {
          "value": "bottom right",
          "label": "Bottom Right"
        }
      ],
      "default": "center center"
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "inherit"
    },
    {
      "type": "header",
      "content": "Animation Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_animations",
      "label": "Enable Animations",
      "default": true,
      "info": "Disable animations for users who prefer reduced motion"
    },
    {
      "type": "select",
      "id": "animation_type",
      "label": "Animation Type",
      "options": [
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide-up",
          "label": "Slide Up"
        },
        {
          "value": "slide-down",
          "label": "Slide Down"
        },
        {
          "value": "slide-left",
          "label": "Slide Left"
        },
        {
          "value": "slide-right",
          "label": "Slide Right"
        },
        {
          "value": "zoom",
          "label": "Zoom"
        }
      ],
      "default": "fade"
    },
    {
      "type": "range",
      "id": "animation_duration",
      "min": 0.1,
      "max": 2.0,
      "step": 0.1,
      "unit": "s",
      "label": "Animation Duration",
      "default": 0.6
    },
    {
      "type": "header",
      "content": "Accessibility Settings"
    },
    {
      "type": "text",
      "id": "aria_label",
      "label": "ARIA Label",
      "info": "Add an accessible label for screen readers"
    },
    {
      "type": "text",
      "id": "aria_describedby",
      "label": "ARIA Described By",
      "info": "Reference element that describes this section"
    },
    {
      "type": "checkbox",
      "id": "skip_to_content",
      "label": "Include in Skip Links",
      "default": false,
      "info": "Add this section to skip navigation links"
    },
    {
      "type": "header",
      "content": "Performance Settings"
    },
    {
      "type": "checkbox",
      "id": "lazy_load",
      "label": "Lazy Load Section",
      "default": false,
      "info": "Load this section only when it comes into view"
    },
    {
      "type": "checkbox",
      "id": "preload_images",
      "label": "Preload Images",
      "default": false,
      "info": "Preload images in this section for better performance"
    },
    {
      "type": "header",
      "content": "SEO Settings"
    },
    {
      "type": "text",
      "id": "meta_title",
      "label": "Meta Title Override",
      "info": "Override the page title for this section"
    },
    {
      "type": "textarea",
      "id": "meta_description",
      "label": "Meta Description Override",
      "info": "Override the page description for this section"
    },
    {
      "type": "image_picker",
      "id": "meta_image",
      "label": "Meta Image Override",
      "info": "Override the page image for this section"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading Size",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            },
            {
              "value": "h4",
              "label": "H4"
            },
            {
              "value": "h5",
              "label": "H5"
            },
            {
              "value": "h6",
              "label": "H6"
            }
          ],
          "default": "h2"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "inherit"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add your text here</p>"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "inherit"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "outline",
              "label": "Outline"
            },
            {
              "value": "text",
              "label": "Text"
            }
          ],
          "default": "primary"
        },
        {
          "type": "select",
          "id": "button_size",
          "label": "Button Size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "medium"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Alt Text",
          "info": "Describe the image for accessibility"
        },
        {
          "type": "select",
          "id": "image_fit",
          "label": "Image Fit",
          "options": [
            {
              "value": "cover",
              "label": "Cover"
            },
            {
              "value": "contain",
              "label": "Contain"
            },
            {
              "value": "fill",
              "label": "Fill"
            }
          ],
          "default": "cover"
        }
      ]
    },
    {
      "type": "spacer",
      "name": "Spacer",
      "settings": [
        {
          "type": "range",
          "id": "spacer_height",
          "min": 0,
          "max": 200,
          "step": 5,
          "unit": "px",
          "label": "Spacer Height",
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "{{ section_label }}",
      "blocks": [
        {% if section_default_blocks != blank %}
        {{ section_default_blocks }}
        {% else %}
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
        {% endif %}
      ]
    }
  ]
}
