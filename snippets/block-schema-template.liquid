{% comment %}
  Block Schema Template
  Provides a standardized schema structure for all theme blocks
{% endcomment %}

{% liquid
  assign block_name = block_name | default: 'block'
  assign block_label = block_label | default: 'Block'
  assign block_category = block_category | default: 'General'
  assign block_icon = block_icon | default: 'block'
  assign block_settings = block_settings | default: ''
%}

{
  "type": "{{ block_name }}",
  "name": "{{ block_label }}",
  "category": "{{ block_category }}",
  "icon": "{{ block_icon }}",
  "settings": [
    {
      "type": "header",
      "content": "{{ block_label }} Settings"
    },
    {
      "type": "text",
      "id": "block_id",
      "label": "Block ID",
      "info": "Add a unique ID to this block for custom styling"
    },
    {
      "type": "text",
      "id": "block_class",
      "label": "Additional CSS Classes",
      "info": "Add custom CSS classes to this block"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "block_width",
      "label": "Block Width",
      "options": [
        {
          "value": "full",
          "label": "Full Width"
        },
        {
          "value": "half",
          "label": "Half Width"
        },
        {
          "value": "third",
          "label": "One Third"
        },
        {
          "value": "quarter",
          "label": "One Quarter"
        },
        {
          "value": "auto",
          "label": "Auto"
        }
      ],
      "default": "auto"
    },
    {
      "type": "select",
      "id": "block_alignment",
      "label": "Block Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "block_margin_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top Margin",
      "default": 0
    },
    {
      "type": "range",
      "id": "block_margin_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Margin",
      "default": 0
    },
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "transparent"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "background_size",
      "label": "Background Size",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "auto",
          "label": "Auto"
        }
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "background_position",
      "label": "Background Position",
      "options": [
        {
          "value": "top left",
          "label": "Top Left"
        },
        {
          "value": "top center",
          "label": "Top Center"
        },
        {
          "value": "top right",
          "label": "Top Right"
        },
        {
          "value": "center left",
          "label": "Center Left"
        },
        {
          "value": "center center",
          "label": "Center Center"
        },
        {
          "value": "center right",
          "label": "Center Right"
        },
        {
          "value": "bottom left",
          "label": "Bottom Left"
        },
        {
          "value": "bottom center",
          "label": "Bottom Center"
        },
        {
          "value": "bottom right",
          "label": "Bottom Right"
        }
      ],
      "default": "center center"
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "justify",
          "label": "Justify"
        }
      ],
      "default": "left"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "inherit"
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "bold",
          "label": "Bold"
        },
        {
          "value": "lighter",
          "label": "Lighter"
        }
      ],
      "default": "normal"
    },
    {
      "type": "header",
      "content": "Border Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_border",
      "label": "Enable Border",
      "default": false
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Border Width",
      "default": 1
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Border Radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Shadow Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_shadow",
      "label": "Enable Shadow",
      "default": false
    },
    {
      "type": "select",
      "id": "shadow_type",
      "label": "Shadow Type",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "medium"
    },
    {
      "type": "color",
      "id": "shadow_color",
      "label": "Shadow Color",
      "default": "rgba(0,0,0,0.1)"
    },
    {
      "type": "header",
      "content": "Animation Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_animations",
      "label": "Enable Animations",
      "default": true,
      "info": "Disable animations for users who prefer reduced motion"
    },
    {
      "type": "select",
      "id": "animation_type",
      "label": "Animation Type",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide-up",
          "label": "Slide Up"
        },
        {
          "value": "slide-down",
          "label": "Slide Down"
        },
        {
          "value": "slide-left",
          "label": "Slide Left"
        },
        {
          "value": "slide-right",
          "label": "Slide Right"
        },
        {
          "value": "zoom",
          "label": "Zoom"
        },
        {
          "value": "bounce",
          "label": "Bounce"
        },
        {
          "value": "pulse",
          "label": "Pulse"
        }
      ],
      "default": "fade"
    },
    {
      "type": "range",
      "id": "animation_duration",
      "min": 0.1,
      "max": 2.0,
      "step": 0.1,
      "unit": "s",
      "label": "Animation Duration",
      "default": 0.6
    },
    {
      "type": "range",
      "id": "animation_delay",
      "min": 0,
      "max": 2.0,
      "step": 0.1,
      "unit": "s",
      "label": "Animation Delay",
      "default": 0
    },
    {
      "type": "header",
      "content": "Accessibility Settings"
    },
    {
      "type": "text",
      "id": "aria_label",
      "label": "ARIA Label",
      "info": "Add an accessible label for screen readers"
    },
    {
      "type": "text",
      "id": "aria_describedby",
      "label": "ARIA Described By",
      "info": "Reference element that describes this block"
    },
    {
      "type": "checkbox",
      "id": "skip_to_content",
      "label": "Include in Skip Links",
      "default": false,
      "info": "Add this block to skip navigation links"
    },
    {
      "type": "header",
      "content": "Performance Settings"
    },
    {
      "type": "checkbox",
      "id": "lazy_load",
      "label": "Lazy Load Block",
      "default": false,
      "info": "Load this block only when it comes into view"
    },
    {
      "type": "checkbox",
      "id": "preload_images",
      "label": "Preload Images",
      "default": false,
      "info": "Preload images in this block for better performance"
    },
    {
      "type": "header",
      "content": "Responsive Settings"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Hide on Mobile",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_tablet",
      "label": "Hide on Tablet",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_desktop",
      "label": "Hide on Desktop",
      "default": false
    }
  ]
}
