{% style %}
  {% # Loads all font variations with display: swap %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  
  {% if settings.type_secondary_font != blank %}
    {{ settings.type_secondary_font | font_face: font_display: 'swap' }}
    {{ settings.type_secondary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
    {{ settings.type_secondary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
    {{ settings.type_secondary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {% endif %}

  :root {
    /* Font Families */
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    
    {% if settings.type_secondary_font != blank %}
      --font-secondary--family: {{ settings.type_secondary_font.family }}, {{ settings.type_secondary_font.fallback_families }};
      --font-secondary--style: {{ settings.type_secondary_font.style }};
      --font-secondary--weight: {{ settings.type_secondary_font.weight }};
    {% else %}
      --font-secondary--family: var(--font-primary--family);
      --font-secondary--style: var(--font-primary--style);
      --font-secondary--weight: var(--font-primary--weight);
    {% endif %}
    
    /* V Brand Colors */
    --color-natural-white: {{ settings.v_natural_white | default: '#ffffff' }};
    --color-natural-black: {{ settings.v_natural_black | default: '#000000' }};
    --color-stony-cream: {{ settings.v_stony_cream | default: '#f5f5f0' }};
    --color-taupe-blush: {{ settings.v_taupe_blush | default: '#d4c4a8' }};
    --color-thunder-green: {{ settings.v_thunder_green | default: '#2d5016' }};
    --color-navy-night: {{ settings.v_navy_night | default: '#1a1a2e' }};
    --color-warm-gray: {{ settings.v_warm_gray | default: '#6c6c6c' }};
    
    /* V Sustainability Colors */
    --color-sustainability-green: {{ settings.v_sustainability_green | default: '#28a745' }};
    --color-sustainability-bg: {{ settings.v_sustainability_bg | default: 'rgba(40, 167, 69, 0.1)' }};
    --color-sustainability-border: {{ settings.v_sustainability_border | default: 'rgba(40, 167, 69, 0.2)' }};
    
    /* Animation Settings */
    --hover-lift-distance: {{ settings.hover_lift_distance | default: '4' }}px;
    --card-hover-scale: {{ settings.card_hover_scale | default: '102' }}%;
    --enable-hover-animations: {{ settings.enable_hover_animations | default: true }};
    --enable-scroll-animations: {{ settings.enable_scroll_animations | default: true }};
    
    /* Legacy compatibility */
    --page-width: {{ settings.container_max_width | default: '1200px' }};
    --page-margin: {{ settings.container_padding | default: '16px' }};
    --color-background: {{ settings.colors_background | default: '#FFFFFF' }};
    --color-foreground: {{ settings.colors_text_primary | default: '#333333' }};
    --style-border-radius-inputs: {{ settings.border_radius_md | default: '8px' }};
  }
{% endstyle %}
